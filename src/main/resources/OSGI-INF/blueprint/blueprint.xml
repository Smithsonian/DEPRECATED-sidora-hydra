<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" xmlns:cxf="http://camel.apache.org/schema/blueprint/cxf"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

  <!-- OSGI blueprint property placeholder -->
  <cm:property-placeholder id="properties" persistent-id="edu.si.sidora.hydra" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="edu.si.sidora.hydra.location" value="localhost" />
      <cm:property name="edu.si.sidora.hydra.port" value="2222" />
      <cm:property name="edu.si.sidora.hydra.sizeForScratch" value="100000000000" />
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="transmissionRoutes" class="edu.si.sidora.hydra.TransmissionRouteBuilder" />

  <cxf:rsServer id="transmissionServer" address="/hydra" serviceClass="edu.si.sidora.hydra.TransmissionService"
    loggingFeatureEnabled="true" />

  <camelContext id="transmissionContext" xmlns="http://camel.apache.org/schema/blueprint">
    <routeBuilder id="transmissionRoute" ref="transmissionRoutes" />
  </camelContext>

</blueprint>
